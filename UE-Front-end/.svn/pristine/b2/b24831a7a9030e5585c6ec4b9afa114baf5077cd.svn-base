.panel {
    position: absolute;
    z-index: 20;
    height: 100%;
    width: 16%;
    top: 8%;
    /* background-color: rgba(83, 174, 255, 0.5);
    box-shadow: 0px 0px 100px 100px rgba(83, 174, 255, 0.5); */
}

.leftAnimation {
    animation: leftAnimation 2s ease forwards;
}
.rightAnimation {
    animation: rightAnimation 2s ease forwards;
}

@keyframes leftAnimation {
    from {
        /* left:-25%; */
        left: 0;
        transform: scale(1.3);
        opacity: 0;
    }

    to {
        left: 0;
        transform: scale(1);
        opacity: 1;
    }
}

@keyframes rightAnimation {
    from {
        /* right: -25%; */
        right: 0;
        transform: scale(1.3);
        opacity: 0;
    }

    to {
        right: 0;
        transform: scale(1);
        opacity: 1;
    }
}