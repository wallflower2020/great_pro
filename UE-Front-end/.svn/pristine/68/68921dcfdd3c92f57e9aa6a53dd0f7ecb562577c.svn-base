.panel {
    position: absolute;
    z-index: 20;
    height: 100%;
    /* width: 16%; */
    top: 8%;
    left: 0;
    display: flex;
    padding-left: 1vw;
    flex-direction: column;
    /* background-color: rgba(83, 174, 255, 0.5);
    box-shadow: 0px 0px 100px 100px rgba(83, 174, 255, 0.5); */
}

.panel2 {
    position: absolute;
    z-index: 20;
    height: 100%;
    /* width: 16%; */
    top: 8%;
    right: 0;
    display: flex;
    padding-right: 1vw;
    flex-direction: column;
}

.leftAnimation {
    animation: leftAnimation 2s ease forwards;
}
.rightAnimation {
    animation: rightAnimation 2s ease forwards;
}

@keyframes leftAnimation {
    from {
        /* left:-25%; */
        transform: scale(1.3);
        opacity: 0;
    }

    to {
        transform: scale(1);
        opacity: 1;
    }
}

@keyframes rightAnimation {
    from {
        /* right: -25%; */
        transform: scale(1.3);
        opacity: 0;
    }

    to {
        transform: scale(1);
        opacity: 1;
    }
}